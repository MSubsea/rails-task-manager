<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<input type="checkbox"
        <% if @task.completed %>
        <%= "checked" %>
        <%  end %>
        readonly >
<p>
<% if @task.completed %>
<%= "This task is completed"%>
<% else %>
<%= "This task is not completed yet"%>
<% end %>
</p>
<%= link_to "Back to list", "/tasks" %>
