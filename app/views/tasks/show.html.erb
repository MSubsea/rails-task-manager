<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<input type="checkbox"
        <% if @task.completed %>
        <%= "checked" %>
        <%  end %>
        readonly >
<p>
<% if @task.completed %>
<%= "This task is completed"%>
<% else %>
<%= "This task is not completed yet"%>
<% end %>
</p>
<br>
<%= link_to "Edit task", edit_task_path(@task) %>
<br>
<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
<br>
<%= link_to "Back to list", "/tasks" %>
